@using LeaveManagement.Web.Models
@model EmployeeAllocationVM

@{
    ViewData["Title"] = "ViewAllocations";
}

<h4>Leave Allocations for @Model.FirstName @Model.LastName</h4>

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateJoinned)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateJoinned)
        </dd>
    </dl>
    <br/>
    <div class="card">
      <div class="card-header">
        Leave Allocations
      </div>
        <ul class="list-group">
            <li class="list-group-item">
                <div class="row">
                    <div class="col">Leave Name</div>
                    <div class="col">Actual Allocation</div>
                    <div class="col">Current Allocation</div>
                    <div class="col">Action</div>
                </div>
            </li>
            @foreach(var allocation in @Model.leaveAllocations)
            {
                 <li class="list-group-item">
                     <div class="row">
                        <div class="col"><h6>@allocation.LeaveType.Name</h6></div>
                        <div class="col"> 
                            <button type="button" class="btn btn-primary">
                              Allocated Days <span class="badge bg-secondary">@allocation.LeaveType.DefaultDays</span>
                            </button></div>
                        <div class="col">
                            <button type="button" class="btn btn-primary">
                              Remaining Days <span class="badge bg-secondary">@allocation.NumberOfDays</span>
                            </button>
                        </div>
                        <div class="col">
                            <a asp-action="EditAllocation" asp-route-id="@allocation.Id" class="btn btn-warning"><i class="fa-solid fa-pen-to-square"></i></a> 
                        </div>
                    </div>
                 </li>
            }     
        </ul>
    </div>
</div>
<br/>
<div>
    <a asp-action="Index" class="btn btn-dark">Back to List</a>
</div>
